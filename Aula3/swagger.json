{
  
    "openapi": "3.0.0",
    "info": {
      "title": "Alunos",
      "description": "Documentação sobre APIs de Usuários",
      "version": "1.0.0"
    },
    "paths": {
     
      "/api/alunos": {
              "get": {
          "tags": ["Alunos"],
          "summary": "Obter todos os usuários",
          "responses": {
            "200": {
              "description": "Lista de usuários",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "number"
                        },
                        "nome": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "post": {
          "tags": ["Alunos"],
          "summary": "Adicionar um novo usuário",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "nome": {
                      "type": "string"
                    }
                  },
                  "required": ["nome"]
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Usuário criado com sucesso",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "number"
                      },
                      "nome": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/api/aluno/{id}": {
        "put": {
          "tags": ["Alunos"],
          "summary": "Atualizar um usuário existente",
          "parameters": [
            {
              "in": "path",
              "name": "id",
              "required": true,
              "schema": {
                "type": "integer",
                "format": "int64"
              },
              "description": "ID do usuário para atualização"
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "nome": {
                      "type": "string"
                    }
                  },
                  "required": ["nome"]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Usuário atualizado com sucesso",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "number"
                      },
                      "nome": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "404": {
              "description": "Usuário não encontrado"
            }
          }
        },

        "delete": {
          "tags": ["Alunos"],
          "summary": "Deletar um usuário existente",
          "parameters": [
            {
              "in": "path",
              "name": "id",
              "required": true,
              "schema": {
                "type": "integer",
                "format": "int64"
              },
              "description": "ID do usuário para deletar"
            }
          ],
          "responses": {
            "204": {
              "description": "Usuário deletado com sucesso"
            },
            "404": {
              "description": "Usuário não encontrado"
            }
          }
        }
      }
    }
  }
  